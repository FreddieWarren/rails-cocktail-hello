<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 card" >
      <h1 class="headers">Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <div class=" button-center">
        	<%= f.button :submit, class: 'btn btn-primary btn-add-cocktail' %>
      	</div>
      <% end %>
    </div>
  </div>
</div>
